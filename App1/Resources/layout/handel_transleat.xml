<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarmev"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
        <ImageView
            android:src="@drawable/bak_button"
            android:layout_marginTop="10dip"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:id="@+id/buttonBak"
            android:layout_alignRight="@id/toolbarmev"
            android:contentDescription="@string/description" />

        <ImageView
            android:src="@drawable/savebtn"
            android:layout_marginTop="10dip"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginRight="60dp"
            android:id="@+id/buttonSave"
            android:layout_alignRight="@id/toolbarmev"
            android:contentDescription="@string/description" />

        <ImageView
            android:src="@drawable/deletbutton"
            android:layout_marginTop="10dip"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginRight="120dp"
            android:id="@+id/buttonDeleate"
            android:layout_alignRight="@id/toolbarmev"
            android:contentDescription="@string/description" />

        <TextView
            android:layout_alignLeft="@id/toolbarmev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
        />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Daealog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|top"/>

    <ScrollView
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableLayoutMain">

        </TableLayout>
    </ScrollView>
</LinearLayout>
